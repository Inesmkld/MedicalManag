<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="login_container" stylesheets="@../STYLE/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dentelmanag.Controller.LoginController">
   <VBox prefHeight="1024.0" prefWidth="200.0" styleClass="login_logo_container" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
      <FontAwesomeIconView glyphName="STETHOSCOPE" size="80" />
   </VBox>
   <VBox layoutX="220.0" layoutY="30.0" prefHeight="360.0" prefWidth="360.0" styleClass="login_from_container" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
      <FontAwesomeIconView glyphName="USER" size="30" />
      <Label fx:id="username_label" text="Nom d'utilisateur:" />
      <TextField fx:id="username" styleClass="input_field" />
      <Label fx:id="password_label" text="Mot de passe: " />
      <TextField fx:id="password" styleClass="input_field" />
      <Button fx:id="seconnecter" mnemonicParsing="false" onAction="#seconnecter" text="Se connecter" />
   </VBox>
</AnchorPane>
